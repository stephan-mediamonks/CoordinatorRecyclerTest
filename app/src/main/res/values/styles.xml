<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextAppearance" parent="TextAppearance" />

    <style name="TextAppearance.ToolbarTitle">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="TextAppearance.CollapsedToolbarTitle" parent="TextAppearance.ToolbarTitle">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TextAppearance.ExpandedToolbarTitle" parent="TextAppearance.ToolbarTitle">
        <item name="android:textSize">20sp</item>
    </style>

</resources>
